extends layout.pug

block content

  nav.nav
    a(href='/project')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box
        h1 #{title}

        p #{description}

      .project-tech-links-box.box
        h6 Technologies
        ul
          each tech in technologies
              li= tech



        a.btn-link(href=`${liveLink}`) Live Demo
        a.btn-link(href=`${githubLink}`) GitHub Repo

    .project-img-box.box

      img.project-img(src=`${image}`, alt='')

    nav.nav
      a(href='/project')
        span &larr;
        |  Back
